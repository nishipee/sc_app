<%= render "shared/admin-header" %>
<div class="admin-main">
  <%# 総売り上げ額 %>
  <div class="admin-sub">
    <h3 class="title2">売り上げ</h2>
    <p class="sales-price">¥<%= @sales %></p>
  </div>
  <%# /総売り上げ額 %>

  <%# 総寄付額を表示 %>
  <div class="admin-sub">
    <h3 class="title2">総寄付額</h2>
    <p class="donation-price-price">¥<%= "総寄付額" %></p>
  </div>
  <%# /総寄付額を表示 %>

  <%# 出店者リスト %>
  <div class="admin-sub">
    <h3 class="title2">出店者リスト</h2>
    <ul class="shop-lists">
      <% @corporate_users.each do |c_user| %>
        <li><%= link_to c_user.name, "/show_c_user/#{c_user.id}", class: "shop-link" %></li>
      <% end %>
    </ul>
 </div>
 <%# /出店者リスト %>

  <%# 寄付先リスト %>
  <div class="admin-sub last">
    <h3 class="title2">寄付先リスト</h2>
    <ul class="donation-lists">
      <% @sc_groups.each do |sc_group| %>
        <li><%= link_to sc_group.name, "/show_sc_group/#{sc_group.id}", class: "donate-link" %></li>
      <% end %>
    </ul>
  </div>
  <%# /寄付先リスト %>
</div>
<%= render "shared/admin-footer" %>