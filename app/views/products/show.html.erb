<%= render "shared/header" %>
<div class="show-main">
  <div class="show-left">
    <div class='show-img-content'>
      <%# 商品画像 %>
      <%= image_tag @product.image, class: "show-item-img" %>
      <%# /商品画像 %>
    </div>
  </div>
  <div class="show-right">
    <div class="item-show">
      <div class="item-box">
        <h2 class="name">
          <%= @product.name %>
        </h2>
        <div class="item-price-box">
          <span class="item-price-show">
            ¥ <%= @product.price %>(税込)
          </span>
          <span class="item-postage">
            <%= @product.charge.name %>
          </span>
        </div>
        <div class="star show">
          <div class="star-btn">
            <%= image_tag "star.png" ,class:"star-icon"%>
            <span>お気に入り 0</span>
          </div>
        </div>
        <div class="cart-btn cart">
          <%= form_with url: product_add_item_path(product_id: @product.id), method: :post, class: "cart-form", local: true do |f| %>
            <% unless @product.cart_items.present? %>
              <p class="cart-quantity">数量</p>
              <%= f.number_field :quantity, class: "quantity show", size: 10, min: 1, id: "quantity_cart" %>
              <%= f.submit "カートに入れる", class:"item-red-btn cart" %>
            <% else %>
              <%= f.submit "カートを確認する", class:"item-red-btn cart" %>
            <% end %>
          <% end %>
        </div>
        <div class="alert">
          <%= flash[:alert] %>
        </div>
        <%# /商品の概要 %>
        <div class="item-explain-box">
          <span>商品説明</span>
        </div>
        <table class="detail-table">
          <tbody>
            <tr>
              <th class="detail-item">出品者</th>
              <td class="detail-value"><%= @product.corporate_user.name %></td>
            </tr>
            <tr>
              <th class="detail-item">社会貢献カテゴリー</th>
              <td class="detail-value"><%= @product.category1.name %></td>
            </tr>
            <tr>
              <th class="detail-item">品目カテゴリー</th>
              <td class="detail-value"><%= @product.category2.name %></td>
            </tr>
            <tr>
              <th class="detail-item">商品詳細カテゴリー</th>
              <td class="detail-value"><%= @product.category3.name %></td>
            </tr>
            <tr>
              <th class="detail-item">発送元の地域</th>
              <td class="detail-value"><%= @product.prefecture.name %></td>
            </tr>
            <tr>
              <th class="detail-item">発送日の目安</th>
              <td class="detail-value"><%= @product.scheduled_day.name %></td>
            </tr>
          </tbody>
        </table>
        <div class="explain">
          <%= @product.introduction %>
        </div>
        <div class="cart-btn last">
          <%= link_to "カートに入れる", product_add_item_path(product_id: @product.id), class:"item-red-btn"%>
        </div>
      </div>
      <%# /商品の概要 %>
    </div>
  </div>
</div>
<%= render "shared/footer" %>